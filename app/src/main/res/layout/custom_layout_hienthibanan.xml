<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Ban 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#265a9e"/>

    <ImageView
        android:id="@+id/ivBanAn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvTenBanAn"
        android:src="@drawable/banan"
        />


    <ImageView
        android:id="@+id/ivGoiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBanAn"
        android:layout_margin="5dp"
        android:src="@drawable/goimon"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ivThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBanAn"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/ivGoiMon"
        android:src="@drawable/thanhtoan"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ivAnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBanAn"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/ivThanhToan"
        android:src="@drawable/anbutton"
        android:visibility="invisible" />
</RelativeLayout>